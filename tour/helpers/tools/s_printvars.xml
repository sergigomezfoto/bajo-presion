    <action name="s_printvars" scope="local" args="variables">

    txtsplit(variables,'|',var_arr);
     if (!layer[s_reducer_log],
        addlayer('s_reducer_log', s_reducer_logvar);
        s_reducer_logvar.loadstyle('s_reducer_log');
    );
    setinterval(s_logger,,
        for(set(i, 0), i LT var_arr.count , inc(i),           
            copy(svar,calc('var_arr[calc(i)].value'));
            set(svalue,get(var_arr[calc(i)].value));
            if (calc(svalue)
            ,
                txtadd(s_logtext,calc(s_logtext?s_logtext:''),calc(svar),' : ' ,calc(calc(svalue)), '[BR]');                
            ,
                txtadd(s_logtext,calc(s_logtext?s_logtext:''),calc(svar),' : ', calc(calc(string(svalue)) == '0'?'0':'null') ,'[BR]'); 
            );
        );
            calc(layer[s_reducer_log].html,'[U]GLOBAL VARS[/U] [BR][BR]' + s_logtext);
                delete(s_logtext); 
    );

    </action>








