<krpano>
	
	<!-- STYLES -->
	<style name="dhe_leg" type="text" y="45" height="16" css="font-family;Helvetica;font-size:9px;color:0x333333;text-align:center;" bgcolor="0x7ECFDC" vcenter="true" bgroundedge="0" enabled="false" handcursor="false" /> 
